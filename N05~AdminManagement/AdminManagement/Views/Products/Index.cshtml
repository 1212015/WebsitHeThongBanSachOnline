@model IEnumerable<AdminManagement.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <span style="float:right">@Html.ActionLink("Tạo sản phẩm mới", "Create", null, new { @class = "btn btn-primary btn-rect", @style = "width:10em" })</span>
            <span style="float:right">@Html.ActionLink("Xuất ra tập tin", "ExportProduct", null, new { @class = "btn btn-warning btn-rect", @style = "width:10em" }) &nbsp;</span>
        </div>
    </div>
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <span>Danh sách sản phẩm</span>
        </div>
        <div class="panel-body">
            <div class="table-responsive" id="table-products">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th style="vertical-align:middle; text-align:center">
                                Mã SP
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Tên SP
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Giá
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Vị trí lưu kho
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Số lượng tồn
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Số lượt xem
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Phân loại cha
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Phân loại con
                            </th>
                            <th style="vertical-align:middle; text-align:center">
                                Trạng thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align:middle">
                                    <img src="~/Content/product/img/@item.Image" height="48" width="48" />
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.ID_Products)
                                </td>
                                <td style="vertical-align:middle">
                                    
                                    @Html.ActionLink(item.Name, "Details", new { id = item.ID_Products })
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.ProductCategoriesRoot.Name)
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.ProductCategoriesSub.Name)
                                </td>
                                <td style="vertical-align:middle; text-align:center">
                                    @Html.DisplayFor(modelItem => item.ProductStatus.Name)
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_Products }, new { @style = "width:7em", @class = "btn btn-success btn-rect" }) <br />                                    
                                    @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_Products }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "table-products" }, new { @style = "width:7em", @class = "btn btn-warning btn-rect" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
