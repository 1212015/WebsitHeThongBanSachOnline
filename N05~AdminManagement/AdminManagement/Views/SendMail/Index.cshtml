@model MvcSendMail.Models.ContactModel
@{
    ViewBag.Title = "Xử Lý Phản Hồi";
    <h2> Soạn Gửi Thư </h2>
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="loginForm">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="control-label col-md-2">Tên của bạn</label>
        <div class="col-md-10" style="margin-bottom:20px">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email người nhận</label>
        <div class="col-md-10" style="margin-bottom:20px">
            @Html.EditorFor(model => model.EmailTo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailTo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Chủ đề</label>
        <div class="col-md-10" style="margin-bottom:20px">
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nội dung</label>
        <div class="col-md-10" style="margin-bottom:20px">
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">



        <input type="submit" value="Gửi" class="btn btn-primary" style="width:6em" />

        </div>

    }

</section>


