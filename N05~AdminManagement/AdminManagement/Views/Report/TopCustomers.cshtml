@using AdminManagement.Models;
@{
    ViewBag.Title = "Top 10 khách hàng mua nhiều";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TopCustomer> topcus = ViewBag.topcus;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Top 10 khách hàng mua nhiều</span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thread>
                                <tr>
                                    <th style="text-align:center">STT</th>
                                    <th style="text-align:center">Mã Khách Hàng</th>
                                    <th style="text-align:center">Họ</th>
                                    <th style="text-align:center">Tên</th>
                                    <th style="text-align:center">Loại Khách Hàng</th>
                                    <th style="text-align:center">Tổng SL Sản Phẩm</th>
                                    <th style="text-align:center">Tổng Tiền</th>
                                </tr>
                            </thread>
                            <tbody>
                                @{ int stt = 1; }
                                @foreach (TopCustomer i in topcus)
                                {
                                    <tr>
                                        <td style="text-align:center">@stt</td>
                                        <td style="text-align:center">@i.ID_USer</td>
                                        <td style="text-align:center">@i.LastName</td>
                                        <td style="text-align:center">@i.FirstName</td>
                                        <td style="text-align:center">@i.Category</td>
                                        <td style="text-align:center">@i.Count</td>
                                        <td style="text-align:center">@i.Total</td>
                                    </tr>
                                    stt += 1;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
