@model IEnumerable<AdminManagement.Models.TopicDetail>

@{
    ViewBag.Title = "Danh sách phản hồi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        Danh sách Phản Hồi
    </div>
    <div class="panel-body">
        <div class="table-responsive" id="table-topic">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    
                    <tr>
                        <th></th>
                        <th style="vertical-align:middle; text-align:center">
                            Mã bài đăng
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Tiêu đề
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Mô tả
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Trạng thái
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Email người đăng
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Ngày tạo
                        </th>
                        <th style="vertical-align:middle; text-align:center">
                            Ngày cập nhật
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="vertical-align:middle; text-align:center">
                                
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.Topic.ID_Topic)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.ShortDetail)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.Detail)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.Topic.TopicStatus.Name)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.Topic.User.Email)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.DateAdded)
                            </td>
                            <td style="vertical-align:middle; text-align:center">
                                @Html.DisplayFor(modelItem => item.DateUpdated)
                            </td>




                            <td style="vertical-align:middle">
                                @Html.ActionLink("Phản hồi", "Reply", "SendMail", new { id = item.ID_TopicDetails, email = item.Topic.User.Email, status = item.Topic.Status }, new { @style = "width:7em", @class = "btn btn-success btn-rect" }) <br />
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
