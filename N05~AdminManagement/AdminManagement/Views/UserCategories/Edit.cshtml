@model AdminManagement.Models.UserCategory

@{
    ViewBag.Title = "Chỉnh sửa thông tin loại khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Chỉnh sửa thông tin loại khách hàng</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_UserCategories)        

        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điểm Tối Thiểu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinPoint, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinPoint, "", new { @class = "text-danger" })
            </div>
        </div>
                
        <div>
            @Html.HiddenFor(model => model.DateAdded)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" style="width:7em" />
                @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-danger", @style = "width:7em" })
            </div>
        </div>
    </div>
}
