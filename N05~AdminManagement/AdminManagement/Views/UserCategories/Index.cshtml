@using AdminManagement.Models;
@{
    ViewBag.Title = "Quản lý loại khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<UserCategory> list = ViewBag.usercategory;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <span style="float:right">@Html.ActionLink("Tạo loại khách hàng mới", "Create", null, new { @class = "btn btn-primary btn-rect", @style = "width:13em" })</span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Danh sách loại khách hàng</span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive" id="table-usercategory">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th style="vertical-align:middle; text-align:center">
                                        Mã Loại
                                    </th>
                                    <th style="vertical-align:middle; text-align:center">
                                        Tên Loại
                                    </th>
                                    <th style="vertical-align:middle; text-align:center">
                                        Điểm Tối Thiểu
                                    </th>
                                    <th style="vertical-align:middle; text-align:center">
                                        Ngày Tạo
                                    </th>
                                    <th style="vertical-align:middle; text-align:center">
                                        Ngày Cập Nhật
                                    </th>
                                    <th style="vertical-align:middle; text-align:center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (UserCategory item in list)
                                {
                                    <tr>
                                        <td style="vertical-align:middle; text-align:center">
                                            @item.ID_UserCategories
                                        </td>
                                        <td>
                                            @Html.ActionLink(item.Name, "Index", "Users", new { id = item.ID_UserCategories }, null)
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @item.MinPoint
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @item.DateAdded
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @item.DateUpdated
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_UserCategories }, new { @class = "btn btn-warning btn-rect", @style = "width:7em" })
                                            @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_UserCategories }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "table-usercategory" }, new { @class = "btn btn-danger btn-rect", @style = "width:7em" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
