@model AdminManagement.Models.ProductCategoriesSub

@{
    ViewBag.Title = "Thay đổi thuộc tính loại sản phẩm con";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "CategorySub", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Chỉnh sửa loại sản phẩm con</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_ProductCategoriesSub)

        <input type="hidden" name="oldRID" value="@Model.RID" />

        @if (ViewBag.error != "")
        {
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-10"><label style="color:red">@ViewBag.error</label></div>
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Chi tiết</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Chi tiết ngắn</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShortDetail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ShortDetail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <input id="file" type="file" name="file" style="font-size:14px" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại cha</label>
            <div class="col-md-10">
                @Html.DropDownList("RID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.DateAdded)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-warning" style="width:6em" />
                @Html.ActionLink("Hủy bỏ", "Index", new { }, new { @class = "btn btn-danger", @style = "width:7em" })
            </div>
        </div>
    </div>
}
