@model IEnumerable<AdminManagement.Models.ProductCategoriesRoot>

@{
    ViewBag.Title = "Quản lý loại sản phẩm cha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <span style="float:right">@Html.ActionLink("Tạo loại sản phẩm cha mới", "Create", new { }, new { @class = "btn btn-primary btn-rect" })</span>
            <span style="float:right">@Html.ActionLink("Xem danh sách loại sản phẩm con", "Index", "CategorySub", new { }, new { @class = "btn btn-danger btn-rect" })&nbsp;</span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Danh sách loại sản phẩm cha</span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive" id="table-category">
                        <table class="table table-bordered table-hover table-striped" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th style="vertical-align:middle; text-align:center">Mã Loại</th>
                                    <th style="vertical-align:middle; text-align:center">Tên Loại</th>
                                    <th style="vertical-align:middle; text-align:center">Ngày Tạo</th>
                                    <th style="vertical-align:middle; text-align:center">Ngày Cập Nhật</th>
                                    <th style="vertical-align:middle; text-align:center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="vertical-align:middle; text-align:center">
                                            @Html.DisplayFor(modelItem => item.ID_ProductCategoriesRoot)
                                        </td>
                                        <td style="vertical-align:middle">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @Html.DisplayFor(modelItem => item.DateAdded)
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @Html.DisplayFor(modelItem => item.DateUpdated)
                                        </td>
                                        <td style="vertical-align:middle; text-align:center">
                                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_ProductCategoriesRoot }, new { @style = "width:7em", @class = "btn btn-success btn-rect" })
                                            @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID_ProductCategoriesRoot }, new AjaxOptions { UpdateTargetId = "table-category", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-danger btn-rect", @style = "width:4em" })                
                                            @Html.ActionLink("Xem loại con", "Index", "CategorySub", new { id = item.ID_ProductCategoriesRoot }, new { @style = "width:8em", @class = "btn btn-primary btn-rect" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
