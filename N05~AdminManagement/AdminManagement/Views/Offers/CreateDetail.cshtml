@model AdminManagement.Models.OfferDetail


<div class="row">
    <div class="col-lg-12">
        <h4>
            Tạo chi tiết khuyến mãi
            <span style="float:right">@Html.ActionLink("Nhập theo loại sản phẩm con", "CreateDetailSub", null, new { @class = "btn btn-primary btn-rect" })</span>
            <span style="float:right">@Html.ActionLink("Nhập theo loại sản phẩm cha", "CreateDetailRoot", null, new { @class = "btn btn-success btn-rect" }) &nbsp;</span>
        </h4>
        
    </div>

</div>
<hr />
<br/>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Hoạt động</label>
                    <div class="col-md-10">
                        @Html.DropDownList("OfferID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Offer.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Sản phẩm</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ProductID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Loại người dùng</label>
                    <div class="col-md-10">
                        @Html.DropDownList("UserCategoryID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserCategory.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">% giảm giá</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    @Html.HiddenFor(model => model.DateAdded, new { Value = DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss") })
                </div>

                <div>
                    @Html.HiddenFor(model => model.DateUpdated, new { Value = DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss") })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-primary" style="width:6em" />
                        @Html.ActionLink("Hủy bỏ", "Index", new { }, new { @class = "btn btn-danger", @style = "width:7em" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
